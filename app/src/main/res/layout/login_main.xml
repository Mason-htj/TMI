<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tmi_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/idtxt"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tmi_logo"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="65dp"
        android:layout_toStartOf="@+id/tmi_logo"
        android:gravity="center"
        android:text="학    번" />

    <EditText
        android:id="@+id/IDtxt"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/idtxt"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/idtxt"
        android:ems="9"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/pwtxt"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/idtxt"
        android:layout_below="@+id/idtxt"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="비밀번호" />

    <EditText
        android:id="@+id/PWtxt"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/IDtxt"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/idtxt"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/PWtxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="로그인" />
</RelativeLayout>